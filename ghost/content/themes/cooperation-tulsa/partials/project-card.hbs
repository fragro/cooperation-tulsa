<article class="project-card">
    {{#if feature_image}}
        <a href="{{url}}" class="card-image">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w"
                sizes="(max-width: 600px) 100vw, 300px"
                src="{{img_url feature_image size="m"}}"
                alt="{{title}}"
                loading="lazy"
            >
        </a>
    {{/if}}
    <div class="card-body">
        <span class="project-status project-status-active">Active</span>
        <h3 class="card-title"><a href="{{url}}">{{title}}</a></h3>
        {{#if custom_excerpt}}
            <p class="card-excerpt">{{custom_excerpt}}</p>
        {{else}}
            <p class="card-excerpt">{{excerpt words="20"}}</p>
        {{/if}}
    </div>
</article>
