                                </a>
                            {{/if}}
                            <div class="card-body">
                                <span class="project-status project-status-community">Community-Managed</span>
                                <h3 class="card-title"><a href="{{url}}">{{title}}</a></h3>
                                <p class="card-excerpt">{{excerpt words="30"}}</p>
                            </div>
                        </article>
                    {{/foreach}}
                </div>
            </div>
        </section>
    {{/if}}
{{/get}}

